<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_rounded_shadow"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tourAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="@drawable/border_rounded_shadow"
        android:src="@mipmap/beach" />
    <TextView
        android:id="@+id/tourLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:drawablePadding="5dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_location_on_black_24dp"/>
    <TextView
        android:id="@+id/tourDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_calendar_today_24px"/>
    <TextView
        android:id="@+id/tourPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_people_black_24dp"/>
    <TextView
        android:id="@+id/tourPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:drawablePadding="5dp"
        android:textColor="@color/colorPrimary"
        android:drawableStart="@drawable/ic_attach_money_black_24dp"/>


</LinearLayout>